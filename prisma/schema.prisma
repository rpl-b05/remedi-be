// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Obat {
  id             Int          @id @default(autoincrement())
  name           String
  kategori       KategoriObat @relation(fields: [kategoriObatId], references: [id])
  kategoriObatId Int          @unique
  recordObat     RecordObat[]

  @@map(name: "obat")
}

model RecordObat {
  obat           Obat          @relation(fields: [obatId], references: [id])
  dosis          String
  obatId         Int
  recordId       Int
  medicineRecord MedicalRecord @relation(fields: [recordId], references: [id])

  @@id([recordId, obatId])
  @@map(name: "record_obat")
}

model KategoriObat {
  id   Int    @id @default(autoincrement())
  name String
  Obat Obat[]

  @@map(name: "kategori_obat")
}

model Penyakit {
  id            Int             @id @default(autoincrement())
  name          String
  category      String
  MedicalRecord MedicalRecord[]

  @@map(name: "penyakit")
}

model User {
  id            Int             @id @default(autoincrement())
  email         String          @unique
  name          String
  password      String
  medialRecords MedicalRecord[]
  role          Role

  @@map(name: "user")
}

enum Role {
  DOCTOR
  PATIENT
}

model MedicalRecord {
  id          Int           @id @default(autoincrement())
  pasien      User          @relation(fields: [pasienId], references: [id])
  dokterId    Int
  pasienId    Int
  isVerified  Boolean?      
  description String?
  recordObat  RecordObat[]
  penyakit    Penyakit?     @relation(fields: [penyakitId], references: [id])
  penyakitId  Int?
  createdAt   DateTime      @default(now())

  @@map(name: "medical_record")
}
